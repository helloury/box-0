#include <iostream>
#include <cmath>


using namespace std;

class Ponto
{
	public:
	double x,y; 
	private:
	void obtemPonto(string msg);
	void mostraPonto(string msg);
	float distaAB(class Ponto &B);
};
	void Ponto::obtemPonto(string msg)
	{
	    cout<<"Digite as coordenadas";
	    cout<<"X e Y do ponto "<<msg<<endl;
	    cin>>x>>y;
	}
	void Ponto::mostraPonto(string msg)
	{
		cout<<"Coordenadas do ponto"<<msg<<endl;
		cout<<x<<" e "<<y<<endl;
	}
	float Ponto::distaAB(class Ponto &B)
	{
		float dist,x2,y2;
		x2=pow(x-B.x,2);
		y2=pow(y-B.y,2);
		dist=sqrt(x2+y2);
		return dist;
	}
	int main()
	{
		do
		{
		    Ponto p1,p2;
		    p1.obtemPonto("A");
		    p2.obtemPonto("B");
		    p1.mostraPonto("A");
		    p2.mostraPonto("B");
		    float distancia=p1.distaAB(p2);
		    cout<<"Distancia de A ate B Ã© :";
		    cout<<distancia<<endl;
		}
		while(x==0);
		return 0;
	}	
